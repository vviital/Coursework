@model IEnumerable<SocietyAnalysisWeb.DataModelDTO.PersonDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Survey form";
}

<div class="row">
    <div class="col-md-4" style="width: 90%">
        <br/>
        <h2>Получить статистическую информацию</h2>
