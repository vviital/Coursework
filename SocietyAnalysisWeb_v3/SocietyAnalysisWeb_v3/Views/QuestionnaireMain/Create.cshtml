@using System.ServiceModel.Configuration
@using System.Web.UI.WebControls
@model Services.Support.ModelView

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Бланк опроса";
}

<div class="society form panel panel-primary">
    <div class="panel-heading panel-head">Анкета</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.LabelFor(model => model.Person.FirstName, "Имя",
                              new { @class = "col-lg-1 control-label"})
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.FirstName,
                     new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Surname, "Фамилия",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.Surname,
                     new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Nationality, "Национальность",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.Nationality,
                     new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.ChildrenNumber, "Количество детей",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.ChildrenNumber,
                   new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div> 
                @Html.LabelFor(model => model.Person.PoliticalOutlook, "Политические взгляды",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.PoliticalOutlook,
                    new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Race, "Города",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.CountryId, Model.Cities, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Race, "Раса",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.Person.Race, Model.Races, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Religion, "Религия",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.Religion,
                     new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Citizenship, "Гражданство",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Person.Citizenship,
                     new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.Sex, "Пол",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.Sex, Model.Sexs, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.NativeLanguage, "Родной язык",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.LanguageId, Model.Languages, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.KnownLanguages, "Языки",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.KnownLanguageId[0], Model.Languages, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.KnownLanguages, "Языки",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.KnownLanguageId[1], Model.Languages, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.LabelFor(model => model.Person.KnownLanguages, "Языки",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.KnownLanguageId[2], Model.Languages, new { @class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.LabelFor(model => model.Person.BirthTime, "Дата рождения", new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.EditorFor(model => model.Person.BirthTime, new {htmlAttributes = new {@class = "form-control", style = "min-width:100%" }})
                        @Html.ValidationMessageFor(model => model.Person.BirthTime, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Образование", new {@class = "col-lg-2 control-label"})
                </div>

                @Html.LabelFor(model => model.Person.KnownLanguages, "ВУЗ",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.EduId, Model.Edu, new {@class = "form-control", style = "min-width:100%" })
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.LabelFor(model => model.Person, "Дата поступления", new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.EditorFor(model => model.DateTime, new {htmlAttributes = new {@class = "form-control", style = "min-width:100%" }})
                        @Html.ValidationMessageFor(model => model.DateTime, "", new {@class = "text-danger"})
                    </div>
                </div>

                @Html.LabelFor(model => model.formEduId, "Форма образования",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.formEduId, Model.formEdu, new {@class = "form-control", style = "min-width:100%" })
                    </div>
                </div>

                @Html.LabelFor(model => model.DurationEducation, "Срок обучения",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.DurationEducation,
                            new {@class = "form-control", style = "min-width:100%" })
                    </div>
                </div>

                @Html.LabelFor(model => model.Speciality, "Специальность",
                        new { @class = "col-lg-1 control-label" })
                <div class="form-group">
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Speciality,
                            new {@class = "form-control", style = "min-width:100%" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-8"></div>
                    <div class="col-lg-3">
                        @Html.ActionLink("Назад", "Index", "Home", null, new {@class = "btn btn-default"})
                        <button class="btn btn-success" id="btnSubmit" type="submit">Отправить</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
